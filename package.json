    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "firebase": "^9.3.0",
    "mongo-sanitize": "1.0.1",
    "mongodb": "3.3.2",
    "mongoose": "^6.0.12",
    "nodemon": "^2.0.14",
    "npm-run-all": "^4.1.5",
    "onchange": "6.1.0",
    "yarn": "^1.22.10"
  }
}
